@model DisqussTopics.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<div class="col-sm-12 col-md-12 col-lg-8 mt-2">
    <div class="card text-bg-dark">
        <div class="card-header">
            <span class="h1">Delete Comment</span>
        </div>

        <div class="card-body">
            <p>Are you sure you want to delete this comment?</p>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Content)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Content)
                </dd>

            </dl>
            <div class="form-group text-end">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a class="btn btn-secondary" asp-controller="Post" asp-action="Detail"
                       asp-route-topic="@Model.Post.Topic.Name"
                       asp-route-slug="@Model.Post.Slug"
                       asp-route-id="@Model.Post.Id">
                        Back to Post
                    </a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>