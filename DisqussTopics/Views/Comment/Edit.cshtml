@model DisqussTopics.Models.Comment

@{
    ViewData["Title"] = "Edit Comment";
}

<div class="col-sm-12 col-md-12 col-lg-8 mt-2">
    <div class="card text-bg-dark">
        <div class="card-header">
            <span class="h1">Edit Comment</span>
        </div>

        <div class="card-body">
            <form asp-controller="Comment" asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="DTUserId" />
                <input type="hidden" asp-for="PostId" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group text-end">
                    <button type="submit" class="btn btn-light">Edit Comment</button>
                </div>
            </form>
        </div>
    </div>

</div>


