@model DisqussTopics.Models.ViewModels.TopicViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Topic</h4>

<hr />

<div class="col-md-12 col-sm-12 col-lg-8">
    <div class="card text-bg-dark">
        <div class="card-header">
            <span>Edit Topic</span>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="DTUserId" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Topic.Name" class="control-label"></label>
                    <input asp-for="Topic.Name" class="form-control" />
                    <span asp-validation-for="Topic.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Topic.About" class="control-label"></label>
                    <textarea asp-for="Topic.About" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Topic.About" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IconUpload" class="control-label"></label>
                    <input asp-for="IconUpload" class="form-control" />
                    <span asp-validation-for="IconUpload" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BannerUpload" class="control-label"></label>
                    <input asp-for="BannerUpload" class="form-control" />
                    <span asp-validation-for="BannerUpload" class="text-danger"></span>
                </div>
                <div class="form-group text-end">
                    <button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#loading-modal">Edit Topic</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal for spinner-->
<partial name="_SpinnerPartial" />