@using Microsoft.AspNetCore.Identity
@using DisqussTopics.Models

@inject SignInManager<DTUser> SignInManager
@inject UserManager<DTUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        @*<a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@

        @if (User.Identity.IsAuthenticated)
        {
            <a class="d-flex nav-link text-white" asp-controller="Profile" asp-action="Detail" asp-route-id="@UserManager.GetUserId(User)">
                Profile
                <span class="material-symbols-outlined">
                    person
                </span>
            </a>
        }


    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="d-flex nav-link btn btn-link border-0 text-white">
                Logout
                <span class="material-symbols-outlined">
                    logout
                </span>
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="d-flex nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">
            Register
            <span class="material-symbols-outlined">
                app_registration
            </span>
        </a>
    </li>
    <li class="nav-item">
        <a class="d-flex nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">
            Login
            <span class="material-symbols-outlined">
                login
            </span>
        </a>
    </li>
}
