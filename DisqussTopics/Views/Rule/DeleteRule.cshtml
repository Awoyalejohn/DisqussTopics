@model DisqussTopics.Models.Rule

@{
    ViewData["Title"] = "Delete Rule";
}

<div class="col-sm-12 col-md-12 col-lg-8 mt-2">
    <div class="card text-bg-dark">
        <div class="card-header">
            <span class="h1">Delete Rule</span>
        </div>

        <div class="card-body">
            <p>Are you sure you want to delete this Rule?</p>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex gap-2 justify-content-end">
            <form asp-controller="Topic" asp-action="DeleteRule" asp-route-slug="@Model.Topic.Slug" asp-route-id="@Model.Id">
                <a class="btn btn-secondary" asp-controller="Topic" asp-action="Detail" asp-route-slug="@Model.Topic.Slug">Back to Topic</a>
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>

    </div>
</div>
